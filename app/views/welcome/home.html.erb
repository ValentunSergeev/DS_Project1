
<div class="row">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">Search for movies</h1>

      <%= form_tag movies_path, method: 'get', class: 'navbar-form', role: 'search' do %>
        <div class="input-group mb3">
          <%= text_field_tag :query, params[:query], size: 150, placeholder: "Movie name", class: "form-control" %>

          <div class="input-group-append">
            <%= submit_tag 'Search', class: 'btn btn-outline-secondary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>


</div>